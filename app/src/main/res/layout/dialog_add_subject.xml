        android:gravity="center"
        android:layout_marginTop="18dp">

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:timePickerMode="spinner"></TimePicker>

